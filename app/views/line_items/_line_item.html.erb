		<% if line_item == @current_item %>
		<tr class="current_item">
		<% else %>
		<tr>
		<% end %>
		<td><%= line_item.quantity %> &times;</td>
		<td><%= truncate(line_item.product.title, length: 15) %></td>
		<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
		<td class="remove_item">
			<%= button_to "&times;".html_safe, line_item, class: 'button-remove-item', method: :delete, 
					data: {confirm: "Remove #{line_item.product.title} from cart?"}, remote: true %>
		</td>
	</tr>
	